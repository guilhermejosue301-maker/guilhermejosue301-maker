# calculator.py

def add(a, b):
    return a + b

def subtract(a, b):
    return a - b

def multiply(a, b):
    return a * b

def divide(a, b):
    if b == 0:
        return "Erro: divisÃ£o por zero!"
    return a / b

def main():
    print("=== Calculadora Simples ===")
    try:
        num1 = float(input("Digite o primeiro nÃºmero: "))
        op = input("Digite o operador (+, -, *, /): ")
        num2 = float(input("Digite o segundo nÃºmero: "))

        if op == '+':
            result = add(num1, num2)
        elif op == '-':
            result = subtract(num1, num2)
        elif op == '*':
            result = multiply(num1, num2)
        elif op == '/':
            result = divide(num1, num2)
        else:
            print("Operador invÃ¡lido.")
            return

        print(f"Resultado: {num1} {op} {num2} = {result}")
    except ValueError:
        print("Entrada invÃ¡lida. Por favor, insira nÃºmeros vÃ¡lidos.")

if __name__ == "__main__":
    main()
